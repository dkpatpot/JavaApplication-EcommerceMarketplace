<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="220.0" prefWidth="140.0" stylesheets="@styles/style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.kanison.controllers.marketplace.ProductController">
   <children>
      <VBox alignment="CENTER" layoutX="4.0" prefHeight="232.0" prefWidth="140.0">
         <children>
            <HBox prefHeight="34.0" prefWidth="118.0">
               <children>
                  <HBox prefHeight="34.0" prefWidth="29.0" />
                  <Label fx:id="productNameLabel" prefHeight="30.0" prefWidth="122.0" styleClass="text-prompt" stylesheets="@styles/style.css" text="productNameLabel">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <HBox prefHeight="34.0" prefWidth="62.0">
                     <children>
                        <ImageView fitHeight="30.0" fitWidth="36.0" onMouseClicked="#handleMouseEvent" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/basket.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="140.0">
               <children>
                  <HBox prefHeight="30.0" prefWidth="12.0" />
                  <Label fx:id="priceLabel" prefHeight="30.0" prefWidth="110.0" styleClass="text-prompt" stylesheets="@styles/style.css" text="priceLabel">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="140.0">
               <children>
                  <Rectangle fx:id="productImage" arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="140.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="140.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Rectangle>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
   <styleClass>
      <String fx:value="product" />
      <String fx:value="shadow" />
   </styleClass>
</AnchorPane>
